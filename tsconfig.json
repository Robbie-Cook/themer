{
  "include": [
    "./src/**/*",
    "./test/**/*",
    "./typings/**/*",
    "./node_modules/@types/**/*"
  ],
  "compilerOptions": {
    "outDir": "./dist/out",
    "allowJs": true,
    "baseUrl": "./src",
    "typeRoots": ["./node_modules/@types", "./typings"],
    "skipDefaultLibCheck": true,
    "listFiles": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": false,
    "sourceMap": true,
    "importHelpers": true,
    "jsx": "react",
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es5",
    "lib": ["dom", "es2015"]
  }
}
